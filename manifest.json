{
  "manifest_version": 3,
  "name": "Wordle Wizard",
  "short_name": "Wordle Wizard",
  "description": "Unofficial helper for Wordle-style games: auto-detects hard-mode tiles and suggests optimal next guesses.",
  "version": "0.2.4",
  "homepage_url": "https://github.com/ashwin/Wordle-Solver",
  "permissions": [
    "storage",
    "clipboardWrite",
    "alarms"
  ],
  "host_permissions": [
    "https://www.nytimes.com/games/*",
    "https://www.nytimes.com/*"
  ],
  "icons": {
    "16": "extension/icons/icon16.png",
    "48": "extension/icons/icon48.png",
    "128": "extension/icons/icon128.png"
  },
  "background": { "service_worker": "extension/background.js" },
  "content_scripts": [
    {
      "matches": ["https://www.nytimes.com/games/*"],
      "js": ["extension/meanings_blob_full.js", "extension/solver.js", "extension/content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["words.txt", "extension/words.txt", "extension/ui.css", "extension/words_meanings.json", "extension/meanings_blob_full.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": "extension/icons/icon48.png",
    "default_title": "Wordle Helper"
  }
}
